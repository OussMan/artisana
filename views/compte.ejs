<div class="row" style="position: relative;">

    <!--le profil-->
    <div class="row profile" style='display: block;margin-top: 10px;'>
        <div class="col-lg-3" style="font-size: 20px; padding-left: 30px;">Mon profil</div>
        <div class="col-lg-7"><div class="col-lg-12" style="border: 1px black solid;">

                <form action="/compte/modifierprofil" method="post" >
                    <div class="row w">
                        <div class="row" >
                        <div class="col-md-4" style="text-align: right;height: 30px;top:5px;">Nom: </div>
                            <div class="col-md-7">
                                <input type="text" name="name" class="input-sm form-control" value="<%=user.name%>" required />
                            </div>
                        </div>
                    </div>


                    <div class="row w">
                        <div class="row" style="">
                            <div class="col-md-4" style="text-align: right;height: 30px;top:5px;font-size: 16px;">vile : </div><div class="col-md-7">

                                <input type="text" name="vile" class="input-sm form-control" value="<%=user.ville%>" required />
                            </div>
                        </div> </div>
                    <div class="row w">
                        <div class="row" >
                            <div class="col-md-4" style="text-align: right;height: 30px;top:5px;">tel: </div><div class="col-md-7">
                                <input type="tel" name="tel" class="input-sm form-control" value="<%=user.telephone%>" required /> </div>
                        </div> </div>
                    <div class="row w">
                        <div class="row" >
                            <div class="col-md-4" style="text-align: right;height: 30px;top:5px;"> e-mail : </div><div class="col-md-7">
                                <input type="email" name="email" class="input-sm form-control" value="<%=user.email%>" required /> </div>
                        </div> </div>
                    <div class="row w">
                        <div class="row" >
                            <div class="col-md-4" style="text-align: right;height: 30px;top:5px;">  adress : </div><div class="col-md-7">
                                <input type="text" name="adress" class="input-sm form-control" value="<%=user.adress%>" required /> </div>
                        </div> </div>
                    <div class="row w">
                        <div class="row" >
                            <div class="col-md-4" style="text-align: right;height: 30px;top:5px;">  mot de passe : </div><div class="col-md-7">
                                <input type="password" name="pass" class="input-sm form-control" value="<%=user.password%>" required /> </div>
                        </div> </div>
                    <div class="row w">
                        <div class="row" >
                            <div class="col-md-4" style="text-align: right;height: 30px;top:5px;">Vérifiez password :</div><div class="col-md-7">
                                <input type="password" name="repass" class="input-sm form-control" value="<%=user.password%>" required /> </div>
                        </div> </div>
                    <div class="row w">
                        <div class="col-md-9"></div><div class="col-md-3"><input id='bnt' type="submit" class="btn btn-primary btn-sm" value="validé" style="width: 95px;"></div>
                    </div>

                </form>

            </div>
        </div>
    </div>

</div>

