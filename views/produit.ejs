<% include include/headerindex.ejs%>

<div style="width: 100%;height: 76%;overflow: auto;overflow-x: hidden;">

        <div class="row" >
            <div class="col-md-2"></div>

            <div class="col-md-8" style="padding: 0px;font-family: ouss;">
                <!--la répététion-->
        <% for(var i =0;i<listproduit.length;i++){%>
                <a href="#"  class="clik" data-toggle="modal" data-target="#myModal">
                    <input type="hidden" name="artisant" value="<%= listproduit[i].user.name%>"/>
                    <input type="hidden" name="description" value="<%= listproduit[i].description%>"/>
                    <input type="hidden" name="telephone" value="<%= listproduit[i].user.telephone%>"/>
                    <input type="hidden" name="email" value="<%= listproduit[i].user.email%>"/>
                    <div class="row" id="aa" style="border-bottom: 1px solid #ccc;">
                        <div class="col-md-5" style="height: 140px;padding: 0px;">
                            <img src="<%= path%>/image_upload/<%= listproduit[i].name%>" alt="" class="col-md-12 imgarticle" style="height: 138px;padding: 0px; " />
                        </div>
                        <div class="col-md-7" style="padding-left: 50px;padding-top: 8px;">
                            <div class="row" style="font-size: 20px;text-align:font-family: ouss; "><span>titre  :  </span><span class="titre"><%= listproduit[i].titre%></span></div>
                            <div class="row" style="font-size: 20px;font-family: ouss;"><span>ville :</span><span class="ville"><%= listproduit[i].user.ville%></span></div>
                            <div class="row" style="font-size: 20px;font-family: ouss;"><span>Quantité :</span> 1</div>
                            <div class="row" style="font-size: 22px;">
                                <div class="col-md-2" style="padding: 0px;font-family: ouss;">le prix</div>
                                <div class="col-md-2" style="padding: 0px;"> <span class="prix"><%= listproduit[i].prix%></span></div>
                                <div class="col-md-2" style="padding: 0px;font-family: ouss;">DH</div>
                                <div class="col-md-3 id_arts" style="padding: 0px;text-align: right;display: none;">
                                    id artisant
                                </div>
                                <div class="col-md-3 id_art" style="padding: 0px;text-align: right;display: none;">
                                    id article
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                <%}%>
            </div>

        </div>


        <!--la début de block-->
